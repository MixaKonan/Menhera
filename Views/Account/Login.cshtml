@inject IJSRuntime JS;
@using Microsoft.JSInterop
@model Menhera.Models.Auth.Login

@{
    Layout = "_AccountLayout";
}


<!doctype html>
<html lang="en">
<head>
    <title>Login</title>
</head>
<body>
@{
    @Html.ValidationSummary(true)
    if (User.Identity.IsAuthenticated)
    {
        <div class="login-title">
            <h1>Вы уже вошли</h1>
        </div>
        <a asp-controller="MainPage" asp-action="Main">Вернуться на главную</a>
    }
    else
    {
        <div class="login">
            <div class="login-screen">
                <div class="login-title">
                    <h1>Вход</h1>
                </div>
                
                <br>
                @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                {
                    <div class="login-form">
                        <div class="control-group">
                            <input asp-for="Email" type="email" class="login-field" placeholder="Email" id="login-email">
                            <input asp-for="Password" type="password" class="login-field" placeholder="Password" id="login-pass">
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn" id="sbmt" value="Войти">
                        </div>
                    </div>
                }
            </div>
        </div>
        <div style="text-align: center">
            @{
                foreach (var errors in ViewData.ModelState.Where(n => n.Value.Errors.Count > 0).ToList())
                {
                    foreach (var err in errors.Value.Errors)
                    {
                        <p>@err.ErrorMessage</p>
                    }
                    
                }
            }
        </div>
    }
}
</body>

</html>