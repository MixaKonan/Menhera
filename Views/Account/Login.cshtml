@model Menhera.Models.Auth.Login

@{
    Layout = "_AccountLayout";
}

<!DOCTYPE html>

<!-- TODO: Выведение ошибок при неправильных данных-->

<html lang="en">
<head>
    <title>Вход</title>
</head>
<body>
<div>
    <form asp-action="Login" method="post">
        <div class="form-group">
            <div class="col-lg-4">
                <input type="email" asp-for="Email">
            </div>
            <div class="col-lg-4">
                <input type="password" asp-for="Password">
            </div>
            <div class="col-lg-4">
                <button type="submit">Login</button>
            </div>
        </div>
    </form>
</div>
</body>
</html>