@inject Menhera.Intefaces.IBoardCollection BoardCollection
@inject Menhera.Intefaces.IAdminCollection AdminCollection

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>

    <!--  Meta  -->
    <meta charset="UTF-8"/>
    <title>Admin Panel</title>

    <!--  Styles  -->
    <link rel="stylesheet" href="css/styles.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="aНетnymous">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
<nav class="navbar navbar-inverse">
    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a asp-action="Panel" class="navbar-brand">
                <div class="prefix">/admin/<span class="postfix">ка</span></div>
            </a>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li>
                    <a asp-action="Panel">
                        Главная
                    </a>
                </li>
            </ul>
            <div class="pull-right">
                <a href="#" class="btn btn-info btn-lg">
                    <span class="glyphicon glyphicon-log-out"></span> Выйти
                </a>
            </div>
        </div>
    </div>
</nav>
<div class="breadcrumbs">
    <div class="container">
        <ol class="breadcrumb">
            <li>
                <a href="/Admin/Panel">Главная</a>
            </li>
            <li>
                <a href="#">Список администраторов</a>
            </li>
        </ol>
    </div>
</div>
<div class="container">
    <br>
    <br>
    <div class="well">
        <div class="title">
            Список администраторов
            <div class="label label-warning">@AdminCollection.Admins.Count()</div>
        </div>
        <br>
        <div>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Email</th>
                    <th scope="col">Логин</th>
                    <th scope="col">Может банить</th>
                    <th scope="col">Может закрывать треды</th>
                    <th scope="col">Может удалять посты</th>
                    <th scope="col">Есть доступ к панели</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var admin in AdminCollection.Admins)
                {
                    <tr>
                        <th scope="row">@ViewBag.Id</th>
                        <td>@admin.Email</td>
                        <td>@admin.Login</td>

                        @{ var classname = "label-default"; }

                        @if (admin.CanBanUsers)
                        {
                            classname = "label-success";
                        }
                        <td>
                            <div class="label @classname">@admin.CanBanUsers</div>
                        </td>
                        @{ classname = "label-default"; }
                        @if (admin.CanCloseThreads)
                        {
                            classname = "label-success";
                        }
                        <td>
                            <div class="label @classname">@admin.CanCloseThreads</div>
                        </td>
                        @{ classname = "label-default"; }


                        @if (admin.CanDeletePosts)
                        {
                            classname = "label-success";
                        }
                        <td>
                            <div class="label @classname">@admin.CanDeletePosts</div>
                        </td>
                        @{ classname = "label-default"; }

                        @if (admin.HasAccessToPanel)
                        {
                            classname = "label-success";
                        }
                        <td>
                            <div class="label @classname">@admin.HasAccessToPanel</div>
                        </td>
                        <td>
                            <button type="button" class="btn btn-danger delete-button" id="@admin.AdminId">Послать нахуй</button>
                        </td>
                    </tr>
                    {
                        ViewBag.Id++;
                    }
                }
                </tbody>
            </table>
            <br>
            <div class="pull-right">
                <a href="/Admin/Create" class="btn btn-primary">
                    <span class="glyphicon glyphicon-plus"></span>
                    Добавить
                </a>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<script src="/js/removeAdmin.js"></script>
</body>
</html>