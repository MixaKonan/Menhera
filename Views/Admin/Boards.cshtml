@inject Menhera.Intefaces.IBoardCollection BoardCollection
@inject Menhera.Intefaces.IAdminCollection AdminCollection

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>

    <!--  Meta  -->
    <meta charset="UTF-8"/>
    <title>Admin Panel</title>

    <!--  Styles  -->
    <link rel="stylesheet" href="../css/styles.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="aНетnymous">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
<nav class="navbar navbar-inverse">
    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a asp-action="Panel" class="navbar-brand">
                <div class="prefix">/admin/<span class="postfix">ка</span></div>
            </a>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li>
                <a asp-action="Panel">
                    Главная
                </a>
            </ul>
            <div class="pull-right">
                <a href="#" class="btn btn-info btn-lg">
                    <span class="glyphicon glyphicon-log-out"></span> Выйти
                </a>
            </div>
        </div>
    </div>
</nav>
<div class="breadcrumbs">
    <div class="container">
        <ol class="breadcrumb">
            <li>
                <a asp-action="Panel">Главная</a>
            </li>
            <li>
                <a href="#">Список досок</a>
            </li>
        </ol>
    </div>
</div>
<div class="container">
    <br>
    <br>
    <div class="well">
        <div class="title">
            Список досок
            <div class="label label-warning">3</div>
        </div>
        <br>
        <div>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Префикс</th>
                    <th scope="col">Постфикс</th>
                    <th scope="col">Заголовок</th>
                    <th scope="col">Описание</th>
                    <th scope="col">Можно ставить своё имя</th>
                    <th scope="col">Стандартное имя для анона</th>
                    <th scope="col">Разрешена тема</th>
                    <th scope="col">Разрешены файлы</th>
                    <th scope="col">Лимит на файлы</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var board in BoardCollection.Boards)
                {
                    <tr>
                        <th scope="row">@ViewBag.Id</th>
                        <td>@board.Prefix</td>
                        <td>@board.Postfix</td>
                        <td>@board.Title</td>
                        <td>@board.Description</td>
                        @{ var classname = "label-default"; }

                        @if (board.AnonHasNoName)
                        {
                            classname = "label-success";
                        }
                        <td>
                            <div class="label @classname">@board.AnonHasNoName</div>
                        </td>
                        <td>@board.AnonName</td>
                        @{ classname = "label-default"; }
                        @if (board.HasSubject)
                        {
                            classname = "label-success";
                        }
                        <td>
                            <div class="label @classname">@board.HasSubject</div>
                        </td>
                        @{ classname = "label-default"; }


                        @if (board.FilesAreAllowed)
                        {
                            classname = "label-success";
                        }
                        <td>
                            <div class="label @classname">@board.FilesAreAllowed</div>
                        </td>
                        <td>
                            <div>@board.FileLimit</div>
                        </td>
                        <td>
                            <button type="button" class="btn btn-danger delete-button" id="@board.BoardId">Удалить доску</button>
                        </td>
                    </tr>
                    {
                        ViewBag.Id++;
                    }
                }
                </tbody>
            </table>
            <br>
            <div class="pull-right">
                <a asp-action="Create" class="btn btn-primary">
                    <span class="glyphicon glyphicon-plus"></span>
                    Добавить
                </a>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<script src="/js/removeBoard.js"></script>
</body>
</html>