@model Admin

@{
    ViewBag.Title = "Аккаунт";
    Layout = "_AdminLayout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
</head>
<body>
<div class="breadcrumbs">
    <div class="container">
        <ol class="breadcrumb">
            <li>
                <a asp-action="Panel">Главная</a>
            </li>
            <li class="active">
                <a href="#">Профиль</a>
            </li>
        </ol>
    </div>
</div>
<div class="container">
    <div class="well">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Email</th>
                <th scope="col">Логин</th>
                <th scope="col">Цвет</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>@Model.Email</td>
                <td>@Model.Login</td>
                <td>
                    <div class="foo blue" style="width: 20px; height: 20px; border: 1px solid rgba(0, 0, 0, .2); background: @Model.NicknameColorCode"></div>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
    <div class="well">
        <div class="tittle">Редактировать профиль</div>
        <br>
        <div class="row">
            <div class="col-xs-12">
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" asp-for="Email" class="form-control" placeholder="Email" id="email">
                </div>
                <div class="form-group">
                    <label>Логин</label>
                    <input type="text" asp-for="Login" class="form-control" placeholder="Login" id="login">
                </div>
                <div class="form-group">
                    <label>Пароль</label>
                    <input type="password" asp-for="PasswordHash" class="form-control" placeholder="Password" minlength="6" id="password">
                </div>
            </div>
            <div class="col-xs-12">
                <label for="">Цвет</label>
                <div class="color-picker">
                    <input type="color" asp-for="NicknameColorCode" value="@Model.NicknameColorCode" id="color">
                </div>
            </div>
            <div class="col-xs-12">
                <br>
                <div class="pull-right">
                    <input type="submit" value="Подтвердить" class="btn btn-primary" id="submit-change">
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/admin/accountDetailsChange.js"></script>
</body>
</html>